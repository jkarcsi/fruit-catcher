<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ChangePasswordController" spacing="10" alignment="CENTER" styleClass="vbox-center">
    <PasswordField fx:id="oldPasswordField" styleClass="text-field" />
    <PasswordField fx:id="newPasswordField" onKeyReleased="#checkPasswordStrength" styleClass="text-field" />
    <PasswordField fx:id="confirmPasswordField" styleClass="text-field" />
    <Label fx:id="newPasswordStrengthLabel" styleClass="label"/>
    <Label fx:id="errorMessage" styleClass="error"/>
    <Button fx:id="changePasswordButton" onAction="#handleChangePasswordButton" styleClass="button" />
    <Button fx:id="backToMainMenuButton" onAction="#handleBackToMainMenuButton" styleClass="button" />
</VBox>
