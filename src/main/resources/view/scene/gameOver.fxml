    <Label fx:id="scoreLabel" text="Your Score: 0" styleClass="label"/>
    <Button fx:id="newGameButton" onAction="#handleNewGameButton" styleClass="button"/>
    <Button fx:id="backToMainMenuButton" onAction="#handleMainMenuButton" styleClass="button"/>
</VBox>
