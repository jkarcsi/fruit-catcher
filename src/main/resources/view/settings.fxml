<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SettingsController"
      stylesheets="@styles.css" styleClass="vbox-center">
    <Label fx:id="gameModeLabel" text="Game Mode" styleClass="label"/>
    <ComboBox fx:id="gameModeComboBox" styleClass="combo-box"/>
    <Label fx:id="difficultyLabel" text="Difficulty" styleClass="label"/>
    <ComboBox fx:id="difficultyComboBox" styleClass="combo-box"/>
    <Label fx:id="textureLabel" text="Texture" styleClass="label"/>
    <ComboBox fx:id="textureComboBox" styleClass="combo-box"/>
    <Label fx:id="logFilePathLabel" text="Log File Path" styleClass="label"/>
    <TextField fx:id="logFilePathTextField" editable="false" styleClass="text-field"/>
    <Button fx:id="chooseDirectoryButton" text="Choose Directory" onAction="#handleChooseLogDirectoryButton" styleClass="button"/>
    <Label fx:id="languageLabel" text="Language" styleClass="label"/>
    <ComboBox fx:id="languageComboBox" styleClass="combo-box"/>
    <Label fx:id="leftKeyLabel" text="Left Key" styleClass="label"/>
    <ComboBox fx:id="leftKeyComboBox" styleClass="combo-box"/>
    <Label fx:id="rightKeyLabel" text="Right Key" styleClass="label"/>
    <ComboBox fx:id="rightKeyComboBox" styleClass="combo-box"/>
    <Button fx:id="saveButton" text="Save" onAction="#handleSaveButton" styleClass="button"/>
    <Button fx:id="backToMainMenuButton" text="Back to Main Menu" onAction="#handleBackToMainMenuButton" styleClass="button"/>
</VBox>
