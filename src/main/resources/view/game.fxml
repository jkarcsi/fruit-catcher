<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GameController" stylesheets="@forest.css">
    <Canvas fx:id="gameCanvas" width="800" height="600" />
    <Label fx:id="scoreLabel" layoutX="10" layoutY="10" text="Score: 0" styleClass="label" />
    <Label fx:id="timerLabel" layoutX="10" layoutY="30" text="Time: 60" styleClass="label" />
    <Button fx:id="toggleBackgroundButton" layoutX="10" layoutY="50" text="Background" onAction="#handleToggleBackgroundButton" styleClass="game-button" />
    <Button fx:id="toggleMusicButton" layoutX="10" layoutY="80" text="Music" onAction="#handleToggleMusicButton" styleClass="game-button" />
    <Button fx:id="pauseButton" layoutX="10" layoutY="110" text="Pause" onAction="#handlePauseButton" styleClass="game-button" />
    <Button fx:id="quitButton" layoutX="10" layoutY="140" text="Quit" onAction="#handleQuitButton" styleClass="game-button" />
    <TextArea fx:id="logTextArea" layoutX="10" layoutY="520" prefWidth="780" prefHeight="70" editable="false" wrapText="true" styleClass="text-area" />
</AnchorPane>
