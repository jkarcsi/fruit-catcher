<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ConfirmationDialogController" spacing="10" alignment="CENTER" stylesheets="@styles.css">
    <Label text="Are you sure you want to delete your account?" styleClass="label"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Yes" onAction="#handleYesButton" styleClass="button"/>
        <Button text="No" onAction="#handleNoButton" styleClass="button"/>
    </HBox>
</VBox>
