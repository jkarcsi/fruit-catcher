<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MainMenuController" spacing="10" alignment="CENTER">
    <HBox spacing="10" alignment="CENTER">
        <Label text="Logged in as:"/>
        <Label fx:id="usernameLabel"/>
    </HBox>
    <Button text="Start Game" onAction="#handleStartGameButton"/>
    <Button text="Description" onAction="#handleDescriptionButton"/>
    <Button text="Player Results" onAction="#handlePlayerResultsButton"/>
    <Button text="Player Rankings" onAction="#handlePlayerRankingsButton"/>
    <Button text="Settings" onAction="#handleSettingsButton"/>
    <Button text="Change Password" onAction="#handleChangePasswordButton"/>
    <Button text="Logout" onAction="#handleLogoutButton"/>
    <Button text="Delete Account" onAction="#handleDeleteAccountButton"/>
</VBox>
