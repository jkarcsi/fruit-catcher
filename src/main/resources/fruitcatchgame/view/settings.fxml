<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SettingsController" stylesheets="@styles.css" styleClass="vbox-center">
    <Label text="Game Mode" styleClass="label"/>
    <ComboBox fx:id="gameModeComboBox" styleClass="combo-box"/>
    <Label text="Difficulty" styleClass="label"/>
    <ComboBox fx:id="difficultyComboBox" styleClass="combo-box"/>
    <Label text="Texture" styleClass="label"/>
    <ComboBox fx:id="textureComboBox" styleClass="combo-box"/>
    <Label text="Log File Path" styleClass="label"/>
    <TextField fx:id="logFilePathTextField" styleClass="text-field"/>
    <Button text="Choose Directory" onAction="#handleChooseLogDirectoryButton" styleClass="button"/>
    <Label text="Language" styleClass="label"/>
    <ComboBox fx:id="languageComboBox" styleClass="combo-box"/>
    <Label text="Left Key" styleClass="label"/>
    <ComboBox fx:id="leftKeyComboBox" styleClass="combo-box"/>
    <Label text="Right Key" styleClass="label"/>
    <ComboBox fx:id="rightKeyComboBox" styleClass="combo-box"/>
    <Button text="Save" onAction="#handleSaveButton" styleClass="button"/>
    <Button text="Back to Main Menu" onAction="#handleBackToMainMenuButton" styleClass="button"/>
</VBox>
